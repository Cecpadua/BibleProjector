{
  "name": "cecp-projection",
  "version": "1.0.0",
  "description": "CECP 圣经投影软件",
  "main": "src/main.js",
  "type": "module",
  "homepage": "https://github.com/cecpadua/cecp-projection",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dist": "electron-builder",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder -mwl",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "it.cecp.bible.projection",
    "productName": "CECP 投影",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/sqlite3/**/*",
      "node_modules/robotjs/**/*",
      "node_modules/keyboard-state/**/*",
      "node_modules/key-state/**/*"
    ],
    "extraResources": [
      {
        "from": "data/",
        "to": "data/"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "uninstallDisplayName": "CECP 投影",
      "license": "LICENSE.txt",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "CECP 投影"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "title": "CECP 投影",
      "icon": "icon.icns",
      "background": "build/background.png",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        },
        {
          "target": "tar.gz",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Utility",
      "desktop": {
        "Name": "CECP 投影",
        "Comment": "圣经投影软件",
        "Keywords": "bible;projection;presentation;"
      }
    },
    "publish": {
      "provider": "github",
      "owner": "Cecpadua",
      "repo": "BibleProjector"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "key-state": "^1.0.1",
    "keyboard-state": "^0.1.0",
    "robotjs": "^0.6.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "electron": "^37.2.6",
    "electron-rebuild": "^3.2.9",
    "electron-builder": "^24.13.3"
  }
}
