{
  "name": "cecp-projection",
  "version": "1.0.0",
  "description": "CECP圣经投影软件",
  "main": "./src/main.js",
  "type": "module",
  "homepage": "https://github.com/cecpadua/cecp-projection",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dist": "electron-builder",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder -mwl",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "it.cecp.bible.projection",
    "productName": "CECP-Bible-Projection",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "compression": "normal",
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/better-sqlite3/**/*",
      "node_modules/bindings/**/*",
      "node_modules/file-uri-to-path/**/*",
      "node_modules/chalk/**/*",
      "node_modules/ansi-styles/**/*",
      "node_modules/supports-color/**/*",
      "node_modules/has-flag/**/*",
      "node_modules/color-convert/**/*",
      "node_modules/color-name/**/*",
      "node_modules/robotjs/**/*"
    ],
    "extraResources": [
      {
        "from": "data/",
        "to": "data/"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip", 
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "uninstallDisplayName": "CECP圣经投影",
      "license": "LICENSE.txt",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "CECP圣经投影",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.utilities"
    },
    "dmg": {
      "title": "CECP圣经投影",
      "icon": "assets/icon.icns",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "internetEnabled": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Utility",
      "desktop": {
        "Name": "CECP圣经投影",
        "Comment": "圣经投影软件",
        "Keywords": "bible;projection;presentation;"
      }
    },
    "publish": {
      "provider": "github",
      "owner": "Cecpadua",
      "repo": "BibleProjector"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "chalk": "^4.1.2"
  },
  "devDependencies": {
    "electron": "^37.3.1",
    "electron-builder": "24.13.3",
    "png2icons": "^2.0.1"
  }
}
